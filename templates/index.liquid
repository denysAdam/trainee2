{% for product in collections.all.products %}
  <h2>{{ product.title }}</h2>
  <p>{{ product.description }}</p>
  <p>Цена: {{ product.price | money }}</p>

  <h3>Варианты:</h3>
  <ul>
    {% for variant in product.variants %}
      <li>
        <strong>Название варианта:</strong> {{ variant.title }}<br>
        <strong>Цена:</strong> {{ variant.price | money }}<br>
        <strong>SKU:</strong> {{ variant.sku }}<br>
        
        {% if variant.image %}
          <img src="{{ variant.image | image_url: width: 300, height: 300 }}" alt="{{ variant.title }}" width="300" height="300" />
        {% else %}
          <p>Изображение не доступно для этого варианта</p>
        {% endif %}
      </li>
    {% endfor %}
  </ul>

{% endfor %}
