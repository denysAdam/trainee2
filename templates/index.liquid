<div class="container mx-auto px-4 py-8">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    {% for product in collections.all.products %}
      <div class="bg-white shadow-md rounded-lg p-4">
        <div class="product-image mb-4">
          {% if product.featured_image %}
            <img class="w-full h-64 object-cover rounded-lg" src="{{ product.featured_image | image_url: width: 300, height: 300 }}" alt="{{ product.title }}">
          {% else %}
            <p class="text-gray-500">Нет изображения</p>
          {% endif %}
        </div>

        <div class="product-info">
          <h2 class="text-xl font-semibold mb-2">{{ product.title }}</h2>
          <p class="text-lg font-medium text-gray-700 mb-4">Цена: {{ product.price | money }}</p>
          <p class="text-gray-500 mb-4">{{ product.description }}</p>
        </div>

        <div class="product-variants">
          <h3 class="text-lg font-semibold mb-2">Варианты:</h3>
          <ul>
            {% for variant in product.variants %}
              <li class="mb-4">
                <strong class="text-gray-700">{{ variant.title }}</strong><br>
                <span class="text-sm text-gray-600">Цена: {{ variant.price | money }}</span><br>
                <span class="text-sm text-gray-600">SKU: {{ variant.sku }}</span>
                {% if variant.image %}
                  <img class="mt-2 w-12 h-12 object-cover rounded" src="{{ variant.image | image_url: width: 50, height: 50 }}" alt="{{ variant.title }}">
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
